mport java.util.*;
public class JavaApplication40 {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int num;
        System.out.println("Enter the number to check odd or even:");
        num=sc.nextInt();
        if(num%2==0)
            System.out.println("1");
        else
            System.out.println("0");
    }
    
}
