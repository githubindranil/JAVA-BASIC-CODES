import java.util.*;
public class JavaApplication29 {

   
    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       int num,rem,sum=0;
        System.out.println("Enter the number you want to get the sum of all digits:");
        num=sc.nextInt();
        while(num!=0)
        {
           
            rem=num%10;
            num=num/10;
            sum=sum+rem;
        }
        System.out.println("The sum will be:"+sum);
    }
    
}
